<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Unikitty Dark">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#bfbbbd" background="#31262e"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#a29da0"/>
  <style name="CurrentLine" background="#867f84"/>
  <style name="LineNumber" foreground="#867f84"/>
  <style name="CurrentLineNumber" foreground="#a29da0" bold="true"/>
  <style name="SearchResult" background="4d434a"/>
  <style name="Parentheses" background="#696167" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#f8f7f7" background="#867f84"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#867f84"/>
  <style name="Occurrences.Rename" background="#a29da0"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#d65407"/>

  <!-- language primitives -->
  <style name="Number" foreground="#d65407"/>
  <style name="String" foreground="#0fa994"/>
  <style name="Keyword" foreground="#a717f1"/>
  <style name="Operator" foreground="#bfbbbd"/>
  <style name="Preprocessor" foreground="#7f42f5"/>
  <style name="Label" foreground="#d8046f"/>

  <!-- types, classes -->
  <style name="Type" foreground="#dc8a0e"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#7f42f5"/>
  <style name="VirtualMethod" foreground="#7f42f5" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#dbd9da"/>
  <style name="Local" foreground="#bfbbbd"/>
  <style name="Static" foreground="#bfbbbd"/>
  <style name="JsScopeVar" foreground="#bfbbbd" italic="true"/>
  <style name="JsImportVar" foreground="#bfbbbd" italic="true"/>
  <style name="JsGlobalVar" foreground="#bfbbbd" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#696167"/>

  <!-- comments -->
  <style name="Comment" foreground="#867f84"/>
  <style name="DisabledCode" foreground="#867f84"/>
  <style name="Doxygen.Comment" foreground="#867f84"/>
  <style name="Doxygen.Tag" foreground="#867f84"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#a717f1"/>
  <style name="Binding" foreground="#d8046f"/>
  <style name="QmlExternalId" foreground="#7f42f5" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#7f42f5" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#a717f1"/>
  <style name="DiffLocation" foreground="#7f42f5"/>
  <style name="AddedLine" foreground="#0fa994"/>
  <style name="RemovedLine" foreground="#dc8a0e"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#a717f1"/>
  <style name="DiffContextLine" foreground="#7f42f5"/>
  <style name="DiffSourceLine" foreground="#0fa994"/>
  <style name="DiffSourceChar" foreground="#dc8a0e" background="#4d434a"/>
  <style name="DiffDestLine" foreground="#0fa994"/>
  <style name="DiffDestChar" foreground="#dc8a0e" background="#4d434a"/>
</style-scheme>
