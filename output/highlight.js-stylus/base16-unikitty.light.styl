$base00 = #31262e;
$base01 = #4d434a;
$base02 = #696167;
$base03 = #867f84;
$base04 = #a29da0;
$base05 = #bfbbbd;
$base06 = #dbd9da;
$base07 = #f8f7f7;
$base08 = #d8046f;
$base09 = #d65407;
$base0a = #dc8a0e;
$base0b = #0fa994;
$base0c = #279ed6;
$base0d = #7f42f5;
$base0e = #a717f1;
$base0f = #c720ca;

// Unikitty Comment
.hljs-comment {
  color: $base03;
}

// Unikitty Red
.hljs-variable,
.hljs-attribute,
.hljs-tag,
.hljs-regexp,
.ruby .hljs-constant,
.xml .hljs-tag .hljs-title,
.xml .hljs-pi,
.xml .hljs-doctype,
.html .hljs-doctype,
.css .hljs-id,
.css .hljs-class,
.css .hljs-pseudo {
  color: $base08;
}

// Unikitty Orange
.hljs-number,
.hljs-preprocessor,
.hljs-built_in,
.hljs-literal,
.hljs-params,
.hljs-constant {
  color: $base09;
}

// Unikitty Yellow
.ruby .hljs-class .hljs-title,
.css .hljs-rules .hljs-attribute {
  color: $base0A;
}

// Unikitty Green
.hljs-string,
.hljs-value,
.hljs-inheritance,
.hljs-header,
.ruby .hljs-symbol,
.xml .hljs-cdata {
  color: $base0B;
}

// Unikitty Aqua
.hljs-title,
.css .hljs-hexcolor {
  color: $base0C;
}

// Unikitty Blue
.hljs-function,
.python .hljs-decorator,
.python .hljs-title,
.ruby .hljs-function .hljs-title,
.ruby .hljs-title .hljs-keyword,
.perl .hljs-sub,
.javascript .hljs-title,
.coffeescript .hljs-title {
  color: $base0D;
}

// Unikitty Purple
.hljs-keyword,
.javascript .hljs-function {
  color: $base0E;
}

.hljs {
  display: block;
  overflow-x: auto;
  background: $base07;
  color: $base02;
  padding: 0.5em;
  -webkit-text-size-adjust: none;
}

.coffeescript .javascript,
.javascript .xml,
.tex .hljs-formula,
.xml .javascript,
.xml .vbscript,
.xml .css,
.xml .hljs-cdata {
  opacity: 0.5;
}
