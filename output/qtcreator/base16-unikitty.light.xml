<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Unikitty Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#6c666b" background="#ffffff"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#898588"/>
  <style name="CurrentLine" background="#a7a3a6"/>
  <style name="LineNumber" foreground="#a7a3a6"/>
  <style name="CurrentLineNumber" foreground="#898588" bold="true"/>
  <style name="SearchResult" background="e1e0e1"/>
  <style name="Parentheses" background="#c4c2c3" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#322a30" background="#a7a3a6"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#a7a3a6"/>
  <style name="Occurrences.Rename" background="#898588"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#d65407"/>

  <!-- language primitives -->
  <style name="Number" foreground="#d65407"/>
  <style name="String" foreground="#17ad98"/>
  <style name="Keyword" foreground="#a232dc"/>
  <style name="Operator" foreground="#6c666b"/>
  <style name="Preprocessor" foreground="#735bf1"/>
  <style name="Label" foreground="#d8137f"/>

  <!-- types, classes -->
  <style name="Type" foreground="#dc8a0e"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#735bf1"/>
  <style name="VirtualMethod" foreground="#735bf1" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#4f484d"/>
  <style name="Local" foreground="#6c666b"/>
  <style name="Static" foreground="#6c666b"/>
  <style name="JsScopeVar" foreground="#6c666b" italic="true"/>
  <style name="JsImportVar" foreground="#6c666b" italic="true"/>
  <style name="JsGlobalVar" foreground="#6c666b" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#c4c2c3"/>

  <!-- comments -->
  <style name="Comment" foreground="#a7a3a6"/>
  <style name="DisabledCode" foreground="#a7a3a6"/>
  <style name="Doxygen.Comment" foreground="#a7a3a6"/>
  <style name="Doxygen.Tag" foreground="#a7a3a6"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#a232dc"/>
  <style name="Binding" foreground="#d8137f"/>
  <style name="QmlExternalId" foreground="#735bf1" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#735bf1" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#a232dc"/>
  <style name="DiffLocation" foreground="#735bf1"/>
  <style name="AddedLine" foreground="#17ad98"/>
  <style name="RemovedLine" foreground="#dc8a0e"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#a232dc"/>
  <style name="DiffContextLine" foreground="#735bf1"/>
  <style name="DiffSourceLine" foreground="#17ad98"/>
  <style name="DiffSourceChar" foreground="#dc8a0e" background="#e1e0e1"/>
  <style name="DiffDestLine" foreground="#17ad98"/>
  <style name="DiffDestChar" foreground="#dc8a0e" background="#e1e0e1"/>
</style-scheme>
